@inproceedings{zhang2023newcastle,
    bibtex_show={true},
    abbr={inclusive}, 

    author       = {Zhang, Cong},
    title        = {Towards more inclusive linguistics research and application},
    booktitle    = {Language and Linguistics Guest Speaker Seminar. Newcastle University},
    year         = {2023},
    keyword      = {invited},

    abstract     = {This talk will address the issue of imbalanced development in linguistics between well-resourced and under-resourced languages. One of the primary reasons for this imbalance is the lack of research tools and resources for under-resourced languages, including for data collection, analysis, and processing. This can make it challenging for linguists to conduct research on under-resourced languages, as they may not have access to the same level of technology and infrastructure that is available for well-resourced languages. Addressing this issue is an essential step towards promoting inclusivity in the field of linguistics. In this talk, I will present some research findings, tools, and resources that have been developed to facilitate linguistic research on under-resourced languages, including options for remote phonetic data collection, an automatic phonetic recogniser and aligner which can be trained with data from different language varieties, and a grapheme-to-phoneme modelling framework and relevant resources, which can help researchers work with under-resourced languages.}

}

